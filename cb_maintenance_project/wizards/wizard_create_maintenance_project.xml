<odoo>

    <record model="ir.ui.view" id="wizard_create_maintenance_project_form_view">
        <field name="name">wizard.create.maintenance.project.form (in cb_maintenance_project)</field>
        <field name="model">wizard.create.maintenance.project</field>
        <field name="arch" type="xml">
            <form string="Create Maintenance Project">
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="maintenance_team_id"/>
                    </group>
                </group>
                <group>
                    <field name="description"/>
                </group>
                <footer>
                    <button name="start_project"
                            string="Start Project"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="wizard_create_maintenance_project_act_window">
        <field name="name">Create Maintenance Project</field>
        <field name="res_model">wizard.create.maintenance.project</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <record model="ir.ui.menu" id="maintenance_project_menu_wizard">
        <field name="name">Create Maintenance Project</field>
        <field name="parent_id" ref="maintenance_project_menu"/>
        <field name="action" ref="wizard_create_maintenance_project_act_window"/>
        <field name="sequence" eval="3"/>
    </record>

</odoo>
