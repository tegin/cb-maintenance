<odoo>
    <record model="ir.ui.view" id="wizard_close_request_form_view">
        <field name="name">wizard.close.request.form (in cb_maintenance)</field>
        <field name="model">wizard.close.request</field>
        <field name="arch" type="xml">
            <form string="Wizard Close Request">
                <span
                >Write the reason for closing this request or leave it blank.</span>
                <group>
                    <field name="solution" />
                </group>
                <footer>
                    <button
                        name="close_request"
                        string="Close Request"
                        class="btn-primary"
                        type="object"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
