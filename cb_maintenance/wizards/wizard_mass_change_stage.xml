<odoo>
    <record model="ir.ui.view" id="wizard_mass_change_stage_form_view">
        <field name="name">wizard.mass.change.stage.form (in cb_maintenance)</field>
        <field name="model">wizard.mass.change.stage</field>
        <field name="arch" type="xml">
            <form string="Set Stage">
                <group>
                    <field
                        name="stage_id"
                        options="{'no_create': True, 'no_open': True}"
                    />
                </group>
                <footer>
                    <button
                        name="set_stage"
                        string="Set Stage"
                        class="btn-primary"
                        type="object"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <act_window
        id="wizard_mass_change_stage_act_multi"
        name="Set Stage"
        binding_model="maintenance.request"
        res_model="wizard.mass.change.stage"
        view_mode="form"
        target="new"
    />
</odoo>
