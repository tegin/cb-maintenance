<odoo>

    <record model="ir.ui.view" id="wizard_change_maintenance_team_form_view">
        <field name="name">wizard.change.maintenance.team.form (in cb_maintenance)</field>
        <field name="model">wizard.change.maintenance.team</field>
        <field name="arch" type="xml">
            <form string="Wizard Change Maintenance Team">
                <group>
                    <field name="team_id"/>
                </group>
                <footer>
                    <button name="assign_team"
                            string="Assign Team"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="wizard_change_maintenance_team_act_window">
        <field name="name">Change Maintenance Team</field>
        <field name="res_model">wizard.change.maintenance.team</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>
