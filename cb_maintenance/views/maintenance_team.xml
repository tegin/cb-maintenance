<odoo>

    <record model="ir.ui.view" id="maintenance_team_view_form">
        <field name="name">maintenance.team.form (in cb_maintenance)</field>
        <field name="model">maintenance.team</field>
        <field name="inherit_id" ref="maintenance.maintenance_team_view_form"/>
        <field name="arch" type="xml">
            <field name="member_ids" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="base_maintenance_team_view_form">
        <field name="name">maintenance.team.form (in cb_maintenance)</field>
        <field name="model">maintenance.team</field>
        <field name="inherit_id" ref="base_maintenance.maintenance_team_view_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="maintenance_team_kanban">
        <field name="name">maintenance.team.form (in cb_maintenance)</field>
        <field name="model">maintenance.team</field>
        <field name="inherit_id" ref="maintenance.maintenance_team_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_kanban_primary_right')]/div/div[5]" position="attributes">
                <attribute name="t-if">1==0</attribute>
            </xpath>
            <xpath expr="//div[hasclass('o_kanban_primary_right')]/div/div[6]" position="attributes">
                <attribute name="t-if">1==0</attribute>
            </xpath>
        </field>
    </record>

</odoo>
